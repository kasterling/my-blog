---
import Layout from './Layout.astro';
import { getEntry } from 'astro:content';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
    image?: string;
    audioUrl?: string;
    mood?: string;
    perspective?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <header class="post-header">
      {frontmatter.mood && (
        <div class="mood-indicator">
          <span class="mood">{frontmatter.mood}</span>
        </div>
      )}
      {frontmatter.perspective && (
        <div class="perspective-indicator">
          <span class="perspective">Exploring: {frontmatter.perspective}</span>
        </div>
      )}
      <h1 class="post-title">{frontmatter.title}</h1>
      <p class="post-description">{frontmatter.description}</p>
      <div class="post-meta">
        <time datetime={frontmatter.pubDate}>
          {new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {frontmatter.tags && (
          <div class="tags">
            {frontmatter.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    {frontmatter.image && (
      <div class="hero-image">
        <img src={frontmatter.image} alt={frontmatter.title} />
      </div>
    )}

    {frontmatter.audioUrl && (
      <div class="audio-player-wrapper">
        <div class="audio-header">
          <h3>ðŸŽ§ Listen to this perspective</h3>
          <p>Prefer to listen? Here's the audio version of this post.</p>
        </div>
        <audio controls preload="metadata">
          <source src={frontmatter.audioUrl} type="audio/wav" />
          <source src={frontmatter.audioUrl.replace('.wav', '.mp3')} type="audio/mpeg" />
          Your browser does not support the audio element.
        </audio>
      </div>
    )}
    
    <div class="post-content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .post-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .mood-indicator, .perspective-indicator {
    margin-bottom: 0.5rem;
  }

  .mood {
    background: linear-gradient(135deg, var(--sage-green) 0%, var(--sage-muted) 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    font-style: italic;
    letter-spacing: 0.02em;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .perspective {
    background: linear-gradient(135deg, var(--steel-blue) 0%, var(--steel-soft) 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .post-title {
    font-family: 'Playfair Display', serif;
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
    color: var(--charcoal-dark);
    letter-spacing: -0.02em;
  }

  .post-description {
    font-size: 1.25rem;
    color: var(--shadow-subtle);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-style: italic;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    font-size: 0.875rem;
    color: var(--shadow-subtle);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--mist-light);
    color: var(--steel-blue);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    border: 1px solid rgba(90, 107, 93, 0.1);
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: linear-gradient(135deg, var(--sage-green), var(--steel-blue));
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(90, 107, 93, 0.2);
  }

  .hero-image {
    margin: 2rem 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-image:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.15);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
    max-height: 400px;
    object-fit: cover;
  }

  .audio-player-wrapper {
    margin: 2rem 0;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--cream-warm) 0%, var(--mist-light) 100%);
    border-radius: 12px;
    border: 1px solid rgba(90, 107, 93, 0.1);
    box-shadow: 0 4px 16px rgba(0,0,0,0.05);
  }

  .audio-header {
    margin-bottom: 1rem;
    text-align: center;
  }

  .audio-header h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    color: var(--charcoal-dark);
    margin: 0 0 0.5rem 0;
  }

  .audio-header p {
    color: var(--shadow-subtle);
    font-size: 0.9rem;
    margin: 0;
    font-style: italic;
  }

  .audio-player-wrapper audio {
    width: 100%;
    height: 40px;
    border-radius: 8px;
    outline: none;
  }

  .audio-player-wrapper audio::-webkit-media-controls-panel {
    background-color: var(--sage-green);
    border-radius: 8px;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--charcoal-light);
  }

  .post-content :global(h2) {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 600;
    margin: 3rem 0 1.5rem;
    color: var(--charcoal-dark);
    line-height: 1.3;
  }

  .post-content :global(h3) {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    color: var(--charcoal-dark);
    line-height: 1.3;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(img) {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--sage-green);
    padding-left: 2rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--shadow-subtle);
    background: linear-gradient(135deg, var(--cream-warm) 0%, var(--mist-light) 100%);
    padding: 1.5rem 2rem;
    border-radius: 8px;
  }

  .post-content :global(ul, ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 1rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>