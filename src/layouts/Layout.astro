---
import { ViewTransitions } from 'astro:transitions';
import Search from '../components/Search.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Examining perspectives against perceptions", image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image ? new URL(image, Astro.site) : new URL(`${import.meta.env.BASE_URL}/images/blog-header.png`, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | The Sterling Perspective</title>
    <ViewTransitions />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:site_name" content="The Sterling Perspective" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Blog",
      "name": "The Sterling Perspective",
      "description": description,
      "url": Astro.site,
      "author": {
        "@type": "Person",
        "name": "Keith Sterling"
      }
    })} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header class="site-header">
      <nav class="nav-container">
        <a href="/my-blog/" class="logo">
          <h1>The Sterling Perspective</h1>
          <p>Examining perspectives against perceptions</p>
        </a>
        <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
          <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
          <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
        <div class="nav-links">
          <a href="/my-blog/" class="nav-home">Home</a>
          <a href="/my-blog/archive" class="nav-archive">Archive</a>
          <a href="/my-blog/about" class="nav-about">About</a>
        </div>
        <button class="search-toggle" aria-label="Open search" id="search-toggle-btn">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="8" cy="8" r="6"></circle>
            <line x1="13" y1="13" x2="18" y2="18"></line>
          </svg>
        </button>
      </nav>
    </header>

    <Search />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.querySelector('.mobile-menu-toggle');
        const navLinks = document.querySelector('.nav-links');

        if (menuToggle && navLinks) {
          menuToggle.addEventListener('click', () => {
            const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
            menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
            navLinks.classList.toggle('mobile-open');
          });

          // Close menu when clicking a link
          navLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
              navLinks.classList.remove('mobile-open');
              menuToggle.setAttribute('aria-expanded', 'false');
            });
          });
        }
      });
    </script>
    
    <main id="main-content">
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="footer-content">
        <nav class="footer-nav">
          <a href="/my-blog/">Home</a>
          <a href="/my-blog/archive">Archive</a>
          <a href="/my-blog/about">About</a>
        </nav>
        <p class="footer-copyright">&copy; {new Date().getFullYear()} Keith Sterling</p>
        <p class="footer-tagline">Examining perspectives against perceptions</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* Import sophisticated fonts */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

  /* Refined Contemplative Color Palette */
  :root {
    /* Primary palette from your selection */
    --charcoal-dark: #2D2D2D;
    --sage-green: #5A6B5D;
    --warm-gray: #DADADA;
    --steel-blue: #455A64;

    /* Extended palette for variety */
    --charcoal-light: #4A4A4A;
    --sage-muted: #6B7A6E;
    --warm-light: #F0F0F0;
    --steel-soft: #607D8B;

    /* Accent and neutral tones */
    --fog-white: #FEFEFE;
    --shadow-subtle: #8A8A8A;
    --cream-warm: #F8F6F4;
    --mist-light: #E8E8E8;

    /* Semantic colors for interactive states */
    --text-primary: var(--charcoal-dark);
    --text-secondary: var(--shadow-subtle);
    --link-hover: var(--steel-blue);
    --link-active: var(--sage-green);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    scroll-behavior: smooth;
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
  }

  body {
    background: linear-gradient(135deg, var(--fog-white) 0%, var(--warm-light) 100%);
    color: var(--charcoal-dark);
    line-height: 1.7;
    font-weight: 400;
  }

  /* Skip link for accessibility */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--charcoal-dark);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    z-index: 1000;
    font-weight: 600;
    border-radius: 0 0 8px 0;
    transition: top 0.3s ease;
  }

  .skip-link:focus {
    top: 0;
    outline: 3px solid var(--sage-green);
    outline-offset: 2px;
  }

  /* Enhanced focus states for accessibility */
  a:focus-visible,
  button:focus-visible {
    outline: 3px solid var(--sage-green);
    outline-offset: 3px;
    border-radius: 4px;
  }

  /* Remove default focus outline but keep for keyboard navigation */
  a:focus:not(:focus-visible),
  button:focus:not(:focus-visible) {
    outline: none;
  }

  .site-header {
    background: rgba(254, 254, 254, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(90, 107, 93, 0.15);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 20px rgba(45, 45, 45, 0.06);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .logo {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .logo:hover {
    transform: translateY(-1px);
  }

  .logo h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--charcoal-dark);
    margin-bottom: 0.25rem;
    letter-spacing: -0.02em;
  }

  .logo p {
    font-size: 0.9rem;
    color: var(--steel-blue);
    font-weight: 400;
    font-style: italic;
    letter-spacing: 0.01em;
  }

  .nav-links {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--shadow-subtle);
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    letter-spacing: 0.02em;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--sage-green), var(--steel-blue));
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-links a:hover {
    color: var(--charcoal-dark);
    transform: translateY(-1px);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--charcoal-dark);
    cursor: pointer;
    padding: 0.5rem;
    position: relative;
    width: 40px;
    height: 40px;
    transition: transform 0.2s ease;
  }

  .mobile-menu-toggle:hover {
    transform: scale(1.1);
  }

  .mobile-menu-toggle svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: opacity 0.2s ease;
  }

  .mobile-menu-toggle .close-icon {
    opacity: 0;
  }

  .mobile-menu-toggle[aria-expanded="true"] .menu-icon {
    opacity: 0;
  }

  .mobile-menu-toggle[aria-expanded="true"] .close-icon {
    opacity: 1;
  }

  .search-toggle {
    background: none;
    border: none;
    color: var(--shadow-subtle);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border-radius: 8px;
  }

  .search-toggle:hover {
    color: var(--charcoal-dark);
    background: rgba(90, 107, 93, 0.1);
  }

  main {
    min-height: calc(100vh - 200px);
    padding: 0;
  }

  .site-footer {
    background: linear-gradient(135deg, var(--cream-warm) 0%, var(--warm-light) 100%);
    border-top: 1px solid rgba(90, 107, 93, 0.2);
    padding: 3rem 0 2rem;
    margin-top: 6rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    color: var(--shadow-subtle);
    font-size: 0.9rem;
    font-weight: 400;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(90, 107, 93, 0.15);
  }

  .footer-nav a {
    text-decoration: none;
    color: var(--steel-blue);
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.25s ease;
    position: relative;
  }

  .footer-nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--sage-green);
    transition: all 0.25s ease;
    transform: translateX(-50%);
  }

  .footer-nav a:hover {
    color: var(--charcoal-dark);
  }

  .footer-nav a:hover::after {
    width: 100%;
  }

  .footer-copyright {
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--charcoal-dark);
  }

  .footer-tagline {
    font-style: italic;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Enhanced Typography */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    line-height: 1.3;
    color: var(--charcoal-dark);
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      position: relative;
      padding: 0 1rem;
    }

    .mobile-menu-toggle {
      display: block;
      order: 2;
    }

    .logo {
      order: 1;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(254, 254, 254, 0.98);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(90, 107, 93, 0.15);
      box-shadow: 0 8px 20px rgba(45, 45, 45, 0.1);
      flex-direction: column;
      gap: 0;
      padding: 1rem 0;
      margin-top: 1rem;
      z-index: 99;
      opacity: 0;
      transform: translateY(-10px);
      pointer-events: none;
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .nav-links.mobile-open {
      display: flex;
      opacity: 1;
      transform: translateY(0);
      pointer-events: auto;
    }

    .nav-links a {
      padding: 1rem 2rem;
      font-size: 1rem;
      border-bottom: 1px solid rgba(90, 107, 93, 0.08);
    }

    .nav-links a:last-child {
      border-bottom: none;
    }

    .nav-links a::after {
      display: none;
    }

    .logo h1 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .logo h1 {
      font-size: 1.25rem;
    }

    .logo p {
      font-size: 0.8rem;
    }

    .footer-nav {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .footer-nav a::after {
      display: none;
    }
  }
</style>