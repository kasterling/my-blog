---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Examining perspectives against perceptions" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | The Sterling Perspective</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav-container">
        <a href="/my-blog/" class="logo">
          <h1>The Sterling Perspective</h1>
          <p>Examining perspectives against perceptions</p>
        </a>
        <div class="nav-links">
          <a href="/my-blog/" class="nav-home">Home</a>
          <a href="/my-blog/about" class="nav-about">About</a>
        </div>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="footer-content">
        <p>&copy; 2024 Keith Sterling. Examining perspectives against perceptions.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* Import sophisticated fonts */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

  /* Refined Contemplative Color Palette */
  :root {
    /* Primary palette from your selection */
    --charcoal-dark: #2D2D2D;
    --sage-green: #5A6B5D;
    --warm-gray: #DADADA;
    --steel-blue: #455A64;
    
    /* Extended palette for variety */
    --charcoal-light: #4A4A4A;
    --sage-muted: #6B7A6E;
    --warm-light: #F0F0F0;
    --steel-soft: #607D8B;
    
    /* Accent and neutral tones */
    --fog-white: #FEFEFE;
    --shadow-subtle: #8A8A8A;
    --cream-warm: #F8F6F4;
    --mist-light: #E8E8E8;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    scroll-behavior: smooth;
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
  }

  body {
    background: linear-gradient(135deg, var(--fog-white) 0%, var(--warm-light) 100%);
    color: var(--charcoal-dark);
    line-height: 1.7;
    font-weight: 400;
  }

  .site-header {
    background: rgba(254, 254, 254, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(90, 107, 93, 0.15);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 20px rgba(45, 45, 45, 0.06);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .logo {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .logo:hover {
    transform: translateY(-1px);
  }

  .logo h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--charcoal-dark);
    margin-bottom: 0.25rem;
    letter-spacing: -0.02em;
  }

  .logo p {
    font-size: 0.9rem;
    color: var(--steel-blue);
    font-weight: 400;
    font-style: italic;
    letter-spacing: 0.01em;
  }

  .nav-links {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--shadow-subtle);
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    letter-spacing: 0.02em;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--sage-green), var(--steel-blue));
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-links a:hover {
    color: var(--charcoal-dark);
    transform: translateY(-1px);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  main {
    min-height: calc(100vh - 200px);
    padding: 0;
  }

  .site-footer {
    background: linear-gradient(135deg, var(--cream-warm) 0%, var(--warm-light) 100%);
    border-top: 1px solid rgba(90, 107, 93, 0.2);
    padding: 3rem 0;
    margin-top: 6rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    color: var(--shadow-subtle);
    font-size: 0.9rem;
    font-weight: 400;
  }

  /* Enhanced Typography */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    line-height: 1.3;
    color: var(--charcoal-dark);
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .nav-links {
      justify-content: center;
      gap: 2rem;
    }

    .nav-links a {
      font-size: 0.9rem;
    }

    .logo h1 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      gap: 1.5rem;
    }
    
    .nav-links a {
      font-size: 0.85rem;
    }
  }
</style>