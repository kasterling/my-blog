---
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<!-- Load Google Fonts: Playfair Display (Serif) and Roboto (Sans-serif) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
		<style>
			/* Define the custom font families */
			.font-serif-custom { font-family: 'Playfair Display', serif; }
			.font-sans-custom { font-family: 'Roboto', sans-serif; }
	
			/* Define the custom color palette using Tailwind config syntax */
			:root {
				--color-charcoal: #263238; /* Primary Base (Text) */
				--color-slate: #455A64;    /* Accent Primary (Nav, Borders) */
				--color-amber: #FFB300;    /* Accent Secondary (Highlights, CTA) */
				--color-offwhite: #FAFAFA; /* Background */
			}
			
			body {
				background-color: var(--color-offwhite);
				color: var(--color-charcoal);
				line-height: 1.65;
			}
	
			/* Utility classes */
			.role-badge {
				display: inline-block;
				padding: 0.25rem 0.75rem;
				border-radius: 9999px;
				font-size: 0.75rem;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				background-color: var(--color-slate);
				color: var(--color-offwhite);
			}
			.text-amber { color: var(--color-amber); }
			.bg-amber { background-color: var(--color-amber); }
			.border-slate { border-color: var(--color-slate); }
			.text-charcoal { color: var(--color-charcoal); }
	
			/* Styling for the role icon in the header */
			.role-header-icon {
				display: inline-flex;
				width: 4rem;
				height: 4rem;
				align-items: center;
				justify-content: center;
				border-radius: 50%;
				background-color: var(--color-amber);
				color: var(--color-charcoal);
				margin-bottom: 1rem;
			}
		</style>
		<ViewTransitions />
	</head>
	<body class="font-sans-custom antialiased min-h-screen flex flex-col text-lg">
		<slot />
	</body>
</html>