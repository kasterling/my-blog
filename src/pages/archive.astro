---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Group posts by year
const postsByYear = sortedPosts.reduce((acc, post) => {
  const year = new Date(post.data.pubDate).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof sortedPosts>);

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));

const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base.slice(0, -1) : base;
---

<Layout
  title="Archive"
  description="Complete chronological archive of all perspectives on The Sterling Perspective"
>
  <div class="archive-page">
    <header class="archive-header">
      <h1>Archive</h1>
      <p class="archive-subtitle">
        A chronological collection of {sortedPosts.length} perspectives
      </p>
    </header>

    <div class="archive-content">
      {years.map(year => (
        <section class="year-section">
          <h2 class="year-heading">{year}</h2>
          <div class="posts-list">
            {postsByYear[Number(year)].map(post => (
              <article class="archive-post">
                <a href={`${baseUrl}/blog/${post.slug}`} class="archive-post-link">
                  <div class="archive-post-main">
                    <h3>{post.data.title}</h3>
                    <p class="archive-post-description">{post.data.description}</p>
                  </div>
                  <div class="archive-post-meta">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.mood && (
                      <span class="mood-badge-mini">{post.data.mood}</span>
                    )}
                  </div>
                </a>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="archive-tags">
                    {post.data.tags.slice(0, 4).map(tag => (
                      <a href={`${baseUrl}/tags/${tag}`} class="archive-tag">#{tag}</a>
                    ))}
                  </div>
                )}
              </article>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</Layout>

<style>
  .archive-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  .archive-header {
    text-align: center;
    padding: 4rem 0 3rem;
    background: linear-gradient(135deg, var(--fog-white) 0%, var(--warm-light) 50%, var(--cream-warm) 100%);
    margin: 0 -2rem 4rem;
    position: relative;
  }

  .archive-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, var(--sage-green), var(--steel-blue));
    border-radius: 2px;
  }

  .archive-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--charcoal-dark);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .archive-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    font-style: italic;
  }

  .archive-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .year-section {
    position: relative;
  }

  .year-heading {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--sage-green);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid rgba(90, 107, 93, 0.2);
    position: sticky;
    top: 80px;
    background: linear-gradient(to bottom, var(--fog-white) 85%, transparent);
    z-index: 10;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .archive-post {
    background: rgba(254, 254, 254, 0.85);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(90, 107, 93, 0.15);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 12px rgba(45, 45, 45, 0.04);
  }

  .archive-post:hover {
    transform: translateX(8px);
    box-shadow: 0 4px 20px rgba(45, 45, 45, 0.08);
    border-color: var(--sage-green);
  }

  .archive-post-link {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    text-decoration: none;
    color: inherit;
    margin-bottom: 1rem;
  }

  .archive-post-main {
    flex: 1;
    min-width: 0;
  }

  .archive-post h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--charcoal-dark);
    margin-bottom: 0.5rem;
    line-height: 1.3;
    transition: color 0.25s ease;
  }

  .archive-post:hover h3 {
    color: var(--steel-blue);
  }

  .archive-post-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .archive-post-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
    flex-shrink: 0;
    min-width: 100px;
  }

  .archive-post-meta time {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
    white-space: nowrap;
  }

  .mood-badge-mini {
    background: linear-gradient(135deg, var(--sage-green) 0%, var(--sage-muted) 100%);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 500;
    font-style: italic;
    white-space: nowrap;
  }

  .archive-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(90, 107, 93, 0.1);
  }

  .archive-tag {
    background: var(--mist-light);
    color: var(--steel-blue);
    padding: 0.25rem 0.6rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.25s ease;
    border: 1px solid rgba(90, 107, 93, 0.1);
  }

  .archive-tag:hover {
    background: linear-gradient(135deg, var(--sage-green), var(--steel-blue));
    color: white;
    border-color: transparent;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .archive-page {
      padding: 1rem;
    }

    .archive-header {
      padding: 3rem 1rem 2.5rem;
      margin: 0 -1rem 2rem;
    }

    .archive-header h1 {
      font-size: 2.5rem;
    }

    .year-heading {
      font-size: 1.75rem;
      top: 70px;
    }

    .archive-post {
      padding: 1.25rem;
    }

    .archive-post-link {
      flex-direction: column;
      gap: 1rem;
    }

    .archive-post-meta {
      flex-direction: row;
      align-items: center;
      width: 100%;
      justify-content: space-between;
    }

    .archive-post:hover {
      transform: translateX(4px);
    }
  }
</style>
