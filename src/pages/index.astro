---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Extract all unique tags for discovery
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];
const popularTags = allTags.slice(0, 12); // Show first 12 tags

// Get recent perspectives
const recentPerspectives = [...new Set(
  allPosts
    .filter(post => post.data.perspective)
    .map(post => post.data.perspective)
    .slice(0, 6)
)];
---

<Layout title="The Sterling Perspective" description="Examining perspectives against perceptions - exploring ideas as they evolve">
  <div class="home-container">
    <section class="hero">
      <div class="hero-visual">
        <img src={`${base}images/blog-header.png`} alt="The Sterling Perspective" class="hero-image" />
      </div>
      <div class="hero-content">
        <h1 class="hero-title">The Sterling Perspective</h1>
        <p class="hero-subtitle">Examining perspectives against perceptions</p>
        <p class="hero-description">
          I think out loud hereâ€”putting thoughts in writing to better see how I actually think versus how I think I think. You'll find explorations across economics, psychology, technology, relationships, and wherever curiosity leads, with genuine connections emerging between different domains.
        </p>
        <div class="value-proposition">
          <p><strong>Think of this as listening in on someone examining their own perspectives in real-time.</strong></p>
        </div>
      </div>
    </section>

    {recentPerspectives.length > 0 && (
      <section class="perspectives">
        <h2>Recent Explorations</h2>
        <div class="perspective-tags">
          {recentPerspectives.map(perspective => (
            <span class="perspective-tag">{perspective}</span>
          ))}
        </div>
      </section>
    )}

    <section class="recent-posts">
      <h2>Latest Thoughts</h2>
      {sortedPosts.length > 0 ? (
        <div class="posts-grid">
          {sortedPosts.slice(0, 6).map(post => (
            <article class="post-card">
              <div class="post-meta">
                {post.data.mood && (
                  <span class="mood-badge">{post.data.mood}</span>
                )}
                <time>{new Date(post.data.pubDate).toLocaleDateString()}</time>
              </div>
              <h3><a href={`${base}blog/${post.slug}`}>{post.data.title}</a></h3>
              <p>{post.data.description}</p>
              {post.data.perspective && (
                <div class="perspective-preview">
                  <span>Exploring: {post.data.perspective}</span>
                </div>
              )}
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.slice(0, 4).map(tag => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
              )}
            </article>
          ))}
        </div>
      ) : (
        <div class="no-posts">
          <p>Ready to start exploring perspectives...</p>
          <p>The conversation between thought and observation begins here.</p>
        </div>
      )}
    </section>

    {popularTags.length > 0 && (
      <section class="tag-cloud">
        <h2>Emerging Themes</h2>
        <div class="tags-grid">
          {popularTags.map(tag => (
            <a href={`/my-blog/tag/${tag}`} class="tag-link">#{tag}</a>
          ))}
        </div>
      </section>
    )}
  </div>
</Layout>

