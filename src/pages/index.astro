---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base.slice(0, -1) : base;

const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Extract all unique tags for discovery
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];
const popularTags = allTags.slice(0, 12); // Show first 12 tags

---

<Layout title="The Sterling Perspective" description="Examining perspectives against perceptions - exploring ideas as they evolve">
  <div class="home-container">
    <section class="hero">
      <div class="hero-visual">
        <img src={`${baseUrl}/images/blog-header.png`} alt="The Sterling Perspective" class="hero-image" />
      </div>
      <div class="hero-content">
        <h1 class="hero-title">The Sterling Perspective</h1>
        <p class="hero-subtitle">Examining perspectives against perceptions</p>
        <p class="hero-description">
          I think out loud hereâ€”putting thoughts in writing to better see how I actually think versus how I think I think. You'll find explorations across economics, psychology, technology, relationships, and wherever curiosity leads, with genuine connections emerging between different domains.
        </p>
        <div class="value-proposition">
          <p><strong>Think of this as listening in on someone examining their own perspectives in real-time.</strong></p>
        </div>
      </div>
    </section>

    <section class="recent-posts">
      <h2>Latest Thoughts</h2>
      {sortedPosts.length > 0 ? (
        <div class="posts-grid">
          {sortedPosts.slice(0, 6).map(post => (
            <article class="post-card">
              {post.data.image && (
                <div class="post-card-image">
                  <img src={post.data.image} alt={post.data.title} />
                </div>
              )}
              <div class="post-card-content">
                <div class="post-meta">
                  {post.data.mood && (
                    <span class="mood-badge">{post.data.mood}</span>
                  )}
                  <time>{new Date(post.data.pubDate).toLocaleDateString()}</time>
                </div>
                <h3><a href={`${baseUrl}/blog/${post.slug}`}>{post.data.title}</a></h3>
                <p>{post.data.description}</p>
                {post.data.perspective && (
                  <div class="perspective-preview">
                    <span>Exploring: {post.data.perspective}</span>
                  </div>
                )}
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="tags">
                    {post.data.tags.slice(0, 4).map(tag => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="no-posts">
          <p>Ready to start exploring perspectives...</p>
          <p>The conversation between thought and observation begins here.</p>
        </div>
      )}
    </section>

    {popularTags.length > 0 && (
      <section class="tag-cloud">
        <h2>Emerging Themes</h2>
        <div class="tags-grid">
          {popularTags.map(tag => (
            <a href={`/my-blog/tag/${tag}`} class="tag-link">#{tag}</a>
          ))}
        </div>
      </section>
    )}
  </div>
</Layout>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    text-align: center;
    padding: 6rem 0 4rem;
    background: linear-gradient(135deg, var(--fog-white) 0%, var(--warm-light) 50%, var(--cream-warm) 100%);
    margin: 0 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center top, rgba(90, 107, 93, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-visual {
    margin-bottom: 3rem;
  }

  .hero-image {
    max-width: 100%;
    height: auto;
    max-height: 300px;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
    object-fit: cover;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-size: 4rem;
    font-weight: 700;
    color: var(--charcoal-dark);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.03em;
    text-shadow: 0 2px 10px rgba(45, 45, 45, 0.1);
  }

  .hero-subtitle {
    font-size: 1.4rem;
    color: var(--steel-blue);
    margin-bottom: 2.5rem;
    font-weight: 500;
    font-style: italic;
    letter-spacing: 0.01em;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--shadow-subtle);
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto 3rem;
    font-weight: 400;
  }

  .value-proposition {
    background: linear-gradient(135deg, var(--sage-green) 0%, var(--steel-blue) 100%);
    color: white;
    padding: 2rem 2.5rem;
    border-radius: 16px;
    margin: 0 auto;
    max-width: 650px;
    box-shadow: 0 8px 25px rgba(69, 90, 100, 0.25);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .value-proposition p {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.6;
    text-align: center;
    font-weight: 400;
  }

  .recent-posts {
    margin-bottom: 4rem;
  }

  .recent-posts h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: #1a1a1a;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: rgba(254, 254, 254, 0.85);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(90, 107, 93, 0.15);
    border-radius: 16px;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(45, 45, 45, 0.06);
    position: relative;
    overflow: hidden;
  }

  .post-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 16px 16px 0 0;
    margin: 0;
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.05);
  }

  .post-card-content {
    padding: 2.5rem;
  }

  .post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--sage-green) 0%, var(--steel-blue) 100%);
    border-radius: 16px 16px 0 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(45, 45, 45, 0.12);
  }

  .post-card:hover::before {
    opacity: 1;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .mood-badge {
    background: linear-gradient(135deg, var(--sage-green) 0%, var(--sage-muted) 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    font-style: italic;
    letter-spacing: 0.02em;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .post-card time {
    color: #666;
  }

  .post-card h3 {
    margin-bottom: 1rem;
  }

  .post-card h3 a {
    text-decoration: none;
    color: #1a1a1a;
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .post-card h3 a:hover {
    color: #0066cc;
  }

  .post-card p {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .perspective-preview {
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: linear-gradient(135deg, var(--cream-warm) 0%, var(--mist-light) 100%);
    border-radius: 8px;
    font-size: 0.875rem;
    font-style: italic;
    color: var(--steel-blue);
    border-left: 3px solid var(--sage-green);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--mist-light);
    color: var(--steel-blue);
    padding: 0.25rem 0.6rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid rgba(90, 107, 93, 0.1);
  }

  .tag-cloud {
    text-align: center;
  }

  .tag-cloud h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #1a1a1a;
  }

  .tags-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .tag-link {
    background: var(--warm-light);
    border: 1px solid rgba(90, 107, 93, 0.15);
    color: var(--steel-blue);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .tag-link:hover {
    background: linear-gradient(135deg, var(--sage-green), var(--steel-blue));
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(90, 107, 93, 0.25);
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 2px dashed #cbd5e1;
  }

  .no-posts p {
    font-size: 1.125rem;
    color: #64748b;
    margin-bottom: 1rem;
    font-style: italic;
  }

  .no-posts p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .hero-image {
      max-height: 200px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>